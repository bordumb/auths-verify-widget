{
  "name": "@auths/verify-widget",
  "version": "0.1.0",
  "description": "Drop-in <auths-verify> web component for decentralized commit verification",
  "type": "module",
  "main": "dist/auths-verify.js",
  "types": "dist/types/auths-verify.d.ts",
  "exports": {
    ".": {
      "import": "./dist/auths-verify.js",
      "types": "./dist/types/auths-verify.d.ts"
    },
    "./slim": {
      "import": "./dist/slim/auths-verify.js",
      "types": "./dist/types/auths-verify.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite serve examples --open",
    "build": "npm run build:full && npm run build:slim",
    "build:full": "INLINE_WASM=true vite build",
    "build:slim": "vite build --mode slim",
    "build:wasm": "cd ../auths/crates/auths-verifier && wasm-pack build --target bundler --out-dir ../../../auths-verify-widget/wasm",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "auths",
    "web-component",
    "verification",
    "decentralized-identity",
    "wasm"
  ],
  "author": "auths",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bordumb/auths.git",
    "directory": "auths-verify-widget"
  },
  "devDependencies": {
    "@auths/verifier": "file:../auths/packages/auths-verifier-ts",
    "typescript": "^5.3.2",
    "vite": "^5.4.0",
    "vitest": "^1.6.0",
    "happy-dom": "^12.10.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
